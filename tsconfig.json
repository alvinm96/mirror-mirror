{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,    
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",    
    "skipLibCheck": true    
  },
  "atom": { 
    "rewriteTsconfig": false 
  },
  "files": [
    "app/main.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true 
  }
}